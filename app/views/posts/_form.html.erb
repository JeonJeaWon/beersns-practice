    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :hashtag %><br>
    <%= f.text_field :hashtag %>
  </div>
  <div class="field">
    <%= f.hidden_field :x, id: :post_x , step: :any, value: @lat%>
  </div>

  <div class="field">
    <%= f.hidden_field :y, id: :post_y , step: :any, value: @lng%>
  </div>
